{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "module": "node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "plugins": [
      {
        "name": "typescript-plugin-resolve-plugins",
        "resolvePlugins": true
      }
    ]
  },
  "include": [
    "src/**/*",
    "../../@types"
  ]
}
